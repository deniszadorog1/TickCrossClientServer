<UserControl x:Class="TickCrossClient.Pages.GameHistory.GameHistElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TickCrossClient.Pages.GameHistory"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="340" 
             Width="350" Height="50"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Name ="FirstPlayerLogin" FontSize="14" 
                       Text="FirstPlayerLogin" HorizontalAlignment="Center"/>
            <TextBlock Name ="SecondPlayerLogin" FontSize="14" 
                      Text="SecondPlayerLogin" HorizontalAlignment="Center"
                       Margin="0 5 0 0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock Name="StartTime" Text="StartTime  - time"
                       HorizontalAlignment="Center" FontSize="14"/>
            <TextBlock Name="EndTime" Text="Endtime - end"
                       HorizontalAlignment="Center" FontSize="14" Margin="0 5 0 0"/>

        </StackPanel>

        <Grid Grid.Column="2">
            <TextBlock Name="GameResultBlock" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" FontSize="14"
                        TextWrapping="Wrap" Text="There should be game result"/>
        </Grid>
        
    </Grid>
</UserControl>
